<%= form_tag(search_search_path(current_locale), method: "get", class: "navbar-form", role: "search") do %>
    <div class="input-group">
        <%= text_field_tag(:query, '', :class => "form-control typeahead", placeholder: t('navigation.search'))  %>
        <div class="input-group-btn">
            <%= button_tag(type: 'submit', class: "btn btn-default") do %>
                <i class="glyphicon glyphicon-search"></i> 
            <% end %>
        </div>
    </div>
<% end %>